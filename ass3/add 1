#include <bits/stdc++.h>
using namespace std;

void f(int arr[], int n) {
    stack<int> st;

    for (int i = 0; i < n; i++) {
        // Pop elements from stack while they are >= current element
        while (!st.empty() && st.top() >= arr[i]) {
            st.pop();
        }

        // If stack empty, no smaller element on left
        if (st.empty()) {
            cout << -1 << " ";
        } else {
            cout << st.top() << " ";
        }

        // Push current element into stack
        st.push(arr[i]);
    }
    cout << endl;
}

int main() {
    int arr[5] = {1, 3, 0, 2, 5};
    f(arr, 5);
    return 0;
}
